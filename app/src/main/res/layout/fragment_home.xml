<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/festivalImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/festival_logo"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/festival_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/festival_updates"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/ov_beige"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/festivalUpdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/updates_background"
            android:padding="16dp"
            android:textSize="18sp"
            android:text="@string/live_updates_placeholder"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weather_dingle"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/ov_beige"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivForecastIcon1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_weather_placeholder" />

                    <TextView
                        android:id="@+id/tvForecastDayTemp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@string/forecast_friday_temp"/>

                    <TextView
                        android:id="@+id/tvForecastDesc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@string/forecast_description"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivForecastIcon2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_weather_placeholder" />

                    <TextView
                        android:id="@+id/tvForecastDayTemp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@string/forecast_saturday_temp"/>

                    <TextView
                        android:id="@+id/tvForecastDesc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@string/forecast_description"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivForecastIcon3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_weather_placeholder" />

                    <TextView
                        android:id="@+id/tvForecastDayTemp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@string/forecast_sunday_temp"/>

                    <TextView
                        android:id="@+id/tvForecastDesc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@string/forecast_description"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
